name: TelcoChurnCI

# Menentukan environment yang akan digunakan (dari file conda.yaml)
conda_env: conda.yaml

# Mendefinisikan 'entry point' atau perintah yang bisa dijalankan
entry_points:
  main:
    # Mendefinisikan parameter yang bisa di-override
    parameters:
      n_estimators: { type: int, default: 100 }
      max_depth: { type: int, default: 10 }
      min_samples_split: { type: int, default: 2 }
      data_path: { type: str, default: "data/telco_churn_preprocessed.csv" }

    # Perintah yang akan dijalankan
    command: "python modelling.py --n_estimators {n_estimators} --max_depth {max_depth} --min_samples_split {min_samples_split} --data_path {data_path}"
